{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        // 生成 sourcemap 文件
        "sourceMap": true,
        "outDir": "./public",
        "lib": [
            "dom",
            "es2018"
        ],
        "allowJs": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["./**/node_modules/**/*"]
}






